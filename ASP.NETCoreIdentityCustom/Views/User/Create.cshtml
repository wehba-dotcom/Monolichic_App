@using ASP.NETCoreIdentityCustom.Areas.Identity.Data;
@using ASP.NETCoreIdentityCustom.Areas.Identity.Pages.Account;
@model ApplicationUser


   <form asp-action="Create" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Oprette en ny konto.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 p-1">
                <label asp-for="FirstName" class="p-0"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3 p-1">
                <label asp-for="LastName" class="p-0"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3 p-1">
                <label asp-for="Email" class="p-0"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 p-1">
                <label asp-for="PhoneNumber" class="p-0"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
           
            <div class=" row">
                <div class="col-8 col-md-3">
                    <button id="registerSubmit" type="submit" class="btn btn-primary w-75">Registrere</button>
                </div>
                <div class="col-8 col-md-3">
                    <a asp-controller="User" asp-action="Index" class="btn btn-primary w-50">Tilbage</a>
                </div>
            </div>
        </div>
    </div>
        
   </form>
