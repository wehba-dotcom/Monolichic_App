<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (pager.CurrentPage > 1)
            {
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@(pager.CurrentPage-1)">Previouse</a>
                </li>
            }
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage? "active":"")">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>
            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                </li>
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }

</div>

     @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width : 100%">
            <thead>
                <tr>
                    <th> ID</th>
