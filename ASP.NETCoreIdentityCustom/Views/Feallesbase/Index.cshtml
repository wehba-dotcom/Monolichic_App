@model IEnumerable<Bornholm_Slægts.Models.Feallesbase> 
@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black-50 pl-3">Liste Døds Annoncer</h2>
            </div>
        </div>
    </div>

    <div class="row pt-4">
        <div class="col-4 text-right">
            <a asp-controller="Feallesbase" asp-action="Create" class="btn btn-primary w-50"><i class="bi bi-plus-circle-fill"></i>  Tilføj Ny</a>
        </div>
        <div class="col-4 text-">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary w-50"><i class="bi bi-backspace"></i>  Tilbage</a>
        </div>
    </div>

    <hr/>
  <form asp-controller="Feallesbase" asp-action="Index">
    <div>
        Fornavne: <input type="text" name="Firstname" />
        DeodsDato: <input type="datetime" name="DoedDato" />
        <input type="submit" value="Søg" />
         <a asp-action="Index" class="btn btn-primary w-20"><i class="bi bi-backspace"></i>  Tilbage til fuld liste</a>
    </div>
  </form>
    <hr />
    <br />

    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (pager.CurrentPage > 1)
            {
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@(pager.CurrentPage-1)">Previouse</a>
                </li>
            }
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage? "active":"")">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>
            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                </li>
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }

 

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" >
            <thead>
                <tr>
                    <th> ID</th>
                    <th> AvisTypeID </th>
                     <th>Avisdato</th>
                    <th> Efternavn </th>
                    <th> Fornavne</th>
                    <th>Foedt</th>
                    <th>Alder</th>
                    <th>Doebenavn</th>
                    <th>Erhverv</th>
                    <th>Adresser</th>
                    <th> SognID </th>
                    <th>TidlBopael </th>
                    <th>Doedsdato </th>
                    <th> Begravelsesdato </th>
                    <th> Begravelsessted</th>
                    <th>Efterladte</th>
                    <th>FlereDoedsannoncer </th>
                    <th>AndreDataFraAnnoncen </th>
                    <th>Oegenavne </th>
                    <th> Nekrolog </th>
                    <th> Mindeord </th>
                    <th> Statstidende </th>
                    <th> Partnerlink </th>
                    <th>Redigere</th>
                    <th>Slet</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(m=>m.Foedt))
                {
                    <tr>
                        <td width="5%">@item.ID</td>
                        <td width="5%">@item.AvisTypeID</td>
                        <td width="5%">@item.Avisdato</td>
                        <td width="5%">@item.Efternavn</td>
                        <td width="5%">@item.Fornavne</td>
                        <td width="5%">@item.Foedt</td>
                        <td width="5%">@item.Alder</td>
                        <td width="5%">@item.Doebenavn</td>
                        <td width="5%">@item.Erhverv</td>
                        <td width="5%">@item.Adresser</td>
                        <td width="5%">@item.SognID</td>
                        <td width="5%">@item.TidlBopael</td>
                        <td width="5%">@item.Doedsdato</td>
                        <td width="5%">@item.Begravelsesdato</td>
                        <td width="5%">@item.Begravelsessted</td>
                        <td width="5%">@item.Efterladte</td>
                        <td width="5%">@item.FlereDoedsannoncer</td>
                        <td width="5%">@item.AndreDataFraAnnoncen</td>
                        <td width="5%">@item.Oegenavne</td>
                        <td width="5%">@item.Nekrolog</td>
                        <td width="5%">@item.Mindeord</td>
                        <td width="5%">@item.Statstidende</td>
                        <td width="5%">@item.Partnerlink</td>
                        
                        <td>
                            <div class=" btn-group" role="group">
                         
                                <a asp-controller="Feallesbase" asp-action="Update" asp-route-id="@item.ID" class="btn btn-primary  mx-2"><i class="bi bi-pencil-square"></i>Redigere</a>
                                </div>
                        </td>
                         <td>
                            <div>
                                <a asp-controller="Feallesbase" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger  mx-1"><i class="bi bi-trash3"></i>Slet</a>
                            </div>
                         </td>
                        
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>Ingen elementer oprettet endnu</p>
    }

 
     @if(pager.TotalPages>0)
     {
        <ul class="pagination justify-content-end">
             @if(pager.CurrentPage> 1)
             {
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@(pager.CurrentPage-1)">Previouse</a>
                </li>
             }
           @for(var pge = pager.StartPage; pge<= pager.EndPage; pge++)
           {
            <li class="page-item @(pge == pager.CurrentPage? "active":"")">
                <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@pge">@pge</a>
            </li>    
           }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                </li>
                <li class="page-item ">
                    <a class="page-link" asp-controller="Feallesbase" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
     }
 <br/>

  
 
 
 







