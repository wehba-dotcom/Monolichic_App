                        <td width="5%">@item.Nekrolog</td>
                        <td width="5%">@item.Mindeord</td>
                        <td width="5%">@item.Statstidende</td>
                        <td width="5%">@item.Partnerlink</td>
                        
                        <td width="20%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Feallesbase" asp-action="Update" asp-route-id="@item.ID" class="btn btn-primary mx-1">Redigere</a>
                                <a asp-controller="Feallesbase" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger mx-1">Slet</a>
                            </div>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

