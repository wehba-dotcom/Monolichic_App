@{
    ViewData["Title"] = "Users";
}
@model ICollection<ASP.NETCoreIdentityCustom.Areas.Identity.Data.ApplicationUser>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-4 text-right">
            <a class="btn btn-primary mx-1" asp-controller="User" asp-action="Create" ><i class="bi bi-plus-circle-fill"></i>Tilføj Ny</a>
        </div>
        <div class="col-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary ">Tilbage</a>
        </div>

    </div>
</div>
<div class="text-center">
    <h1 class="display-4">Brugere</h1>
    @if ( @Model != null && @Model.Any())
    {
        <table class="table table-bordered table-striped-columns">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Fornavn</th>
                 <th scope="col">Efternavn</th>
                <th scope="col">Email</th>
                <th scope="col">Redigere</th>
                <th scope="col">Slet</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                        <td>
                            <div class=" btn-group" role="group">
                                <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Redigere</a>
                             </div>
                        </td>
                        <td >
                            <div>
                                <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger mx-1"><i class="bi bi-trash3"></i>Slet</a>
                            </div>

                        </td>
            </tr>
            }
            </tbody>
        </table>
    }
</div>

<br/>